<div class="row-fluid">
  <div id="sign_up" class="span6 offset3 well overlay">
    <h2>Sign up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <div class="row-fluid">
        <%= devise_error_messages! %>
      </div>
      <div class="row-fluid">
        <div class="span6">
          <%= f.label :email %>
          <%= f.email_field :email %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %>
          
          <%= f.label :username %>
          <%= f.text_field :username %>
          
          <%= f.label :firstname %>
          <%= f.text_field :firstname %>
          
          <%= f.label :lastname %>
          <%= f.text_field :lastname %>
        </div>
        <div class="span6">
          <%= f.label :phone %>
          <%= f.telephone_field :phone %>
          
          <%= f.label :birthdate %>
          <%= f.date_select :birthdate, :default => DateTime.civil(2013, 3, 1, 1, 0) %>
          
          <%= f.label :school %>
          <%= f.text_field :school %>

          <div><%= f.submit "Sign up", :class => 'btn' %></div>
        </div>
      </div>
    <% end %>
    <hr/>
    <%= render "users/shared/links" %>
  </div>
</div>
