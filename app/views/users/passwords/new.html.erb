<div class="row-fluid">
  <div id="reset_password" class="span4 offset4 well overlay">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <div><%= f.submit "Send me reset password instructions", :class => 'btn btn-action' %></div>
    <% end %>
    <hr/>
    <%= render "users/shared/links" %>
  </div>
</div>
