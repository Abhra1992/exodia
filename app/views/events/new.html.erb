<div class="row-fluid">
  <div id="new_event_form" class="well overlay">
    <h2>Create New Event</h2>
    
    <%= render 'markdown' %>
    
    <%= form_for :event, :url => events_path, :method => :post do |f| %>
      <%= f.label :type_id %>
      <%= f.select :type_id, @types %>
      
      <%= f.label :name, "Event Name" %>
      <%= f.text_field :name %>
      
      <%= f.label :code, "Event URL Code" %>
      <%= f.text_field :code %>
      
      <%= f.label :description, "Description (Supports Markdown)" %>
      <%= f.text_area :description %>
      
      <%= f.label :rules, "Rules (Supports Markdown)" %>
      <%= f.text_area :rules %>
      
      <%= f.label :judging, "Judging (Supports Markdown)" %>
      <%= f.text_area :judging %>
      
      <%= f.label :submit_to, "Submission Email" %>
      <%= f.email_field :submit_to %>
      
      <%= f.label :rounds %>
      <%= f.text_field :rounds %>  
      
      <%= f.label :team, "Team Event?" %>
      <%= f.check_box :team %>
      
      <%= f.label :venue_id %>
      <%= f.select :venue_id, @venues %>
      
      <%= f.label :start, "Event Starts At" %>
      <%= f.datetime_select :start, :default => DateTime.civil(2013, 3, 1, 1, 0) %>
      
      <%= f.label :end, "Event Ends At" %>
      <%= f.datetime_select :end, :default => DateTime.civil(2013, 3, 2, 1, 0) %>
      
      <div>
        <%= f.submit "Save and Close", :class => 'btn' %>
      </div>
    <% end %>
  </div>
</div>
