<% if @created_team.nil? %>
  This is a team event.<br/>
  <%= link_to 'Create a Team', new_contest_team_path(@event), :class => 'btn btn-action' %>
<% else %>
  You have created a team.<br/>
  <%= link_to 'Add Teammates', edit_contest_team_path(@event), :class => 'btn btn-action' %>
  <%= link_to 'Destroy Team', contest_team_path(@event), :method => :delete, :class => 'btn btn-danger' %>
<% end %>
