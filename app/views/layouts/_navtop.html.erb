<!-- Navbar
================================================== -->
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
			<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<% 3.times do %>
					<span class="icon-bar"></span>
				<% end %>
			</button>
			
			<!-- Be sure to leave the brand out there if you want it shown -->
		  <%= link_to "Exodia 2013, IIT Mandi", root_path, :class => 'brand' %>
		  
		  <!-- Everything you want hidden at 940px or less, place within here -->
			<div class="nav-collapse collapse">
			  <ul class="nav">
					<li class="<%= 'active' if params[:controller] == 'home' %>">
						<%= link_to (icon 'home', "Home"), root_path %>
					</li>
					<li class="<%= 'active' if params[:controller] == 'contests' %>">
						<%= link_to (icon 'gift', "Contests"), contests_path %>
					</li>
					<li class="<%= 'active' if params[:controller] == 'insights' %>">
						<%= link_to (icon 'star', "Special Attractions"), insights_path %>
					</li>
					<li class="dropdown">
					  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= icon 'leaf' %>Extras <b class="caret"></b></a>
					  <ul class="dropdown-menu">
					    <li><%= link_to (icon 'picture', "Gallery"), "#" %></li>
					    <li><%= link_to (icon 'folder-open', "Archive - 2012"), "#" %></li>
					  </ul>
					</li>
					<li class="<%= 'active' if params[:action] == 'schedule' %>">
						<%= link_to (icon 'time', "Schedule"), pages_schedule_path %>
					</li>
				</ul>
				
				<ul class="nav pull-right">
					<li class="">
						<div class="btn-group pull-right">
							<% if user_signed_in? %>
								<button class="btn"><%= icon 'user', current_user.username %></button>
								<button class="btn dropdown-toggle" data-toggle="dropdown">
									<span class="caret"></span>
								</button>
								<ul class="dropdown-menu">
									<li class="nav-header">Your Teams</li>
									<li class="divider"></li>
									<% current_user.Teams.each do |t| %>
									<li><%= link_to (icon 'briefcase', t.name), '#' %></li>
									<% end %>
									<li class="divider"></li>
									<li><%= link_to (icon 'off', "Sign Out"), destroy_user_session_path, :method => :delete %></li>
								</ul>
							<% else %>
								<button class="btn"><%= icon 'asterisk' %>My Exodia</button>
								<button class="btn dropdown-toggle" data-toggle="dropdown">
									<span class="caret"></span>
								</button>
								<ul class="dropdown-menu">
									<li><%= link_to (icon 'pencil', "Sign In"), new_user_session_path %></li>
									<li class="divider"></li>
									<li><%= link_to (icon 'plus', "Sign Up"), new_user_registration_path %></li>
								</ul>
							<% end %>
						</div><!-- /btn-group -->
					</li>
				</ul>
			</div>
    </div>
  </div>
</div>

<div class="clear">.</div>
